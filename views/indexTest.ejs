<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>To Do List App</title>
</head>
<body>
    <h1>To Do List App</h1>

    <form action="/task" method="post">
        <input type="text" placeholder="Add Your Task Here" name="task" id="taskInput">
            <button id="submitButton" role="button" type="submit">Submit</button>
    </form>
    
    <h2>REMAINING TASKS: <%= Number(tasks.length) %></h2>
    <section data-postion="tasks">
        <ul class="tasks">
            <% for(let i = 0; i < tasks.length; i++) {%>
                <div class="container">
                <li class="task">
                    <% if(tasks[i].completed === true) {%>
                        <span class="completed"><%= tasks[i].task %></span>
                    <% }else{ %>
                        <span class="thisText"><%= tasks[i].task %></span>
                        <% } %>
                </li>
                
                <section data-postion="delete-task">
                    <button class="mark-done" data-task-id="<%= tasks[i]._id %>">DONE</button>
                    <button class="mark-delete" data-task-id="<%= tasks[i]._id %>">DELETE</button>
                </section>
                </div>


                <%  } %>
            </ul>
        </section>

        <script src="/main.js"></script>
        <!-- <script src="../public/main.js"></script> -->
</body>
</html>
